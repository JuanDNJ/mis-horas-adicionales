rules_version = '2';

// Reglas actualizadas para permitir acceso a fotos de perfil
service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas específicas para fotos de perfil
    // Ruta: profile-photos/USER_ID/NOMBRE_ARCHIVO
    match /profile-photos/{userId}/{allPaths=**} {
      // Permitir lectura a cualquier usuario autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura solo si el usuario es el dueño de la carpeta
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Mantener restringido el acceso al resto por seguridad
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
